    div(id="content_div" style="background-color: rgb(215, 221, 221);padding:15px 30px 15px 30px;")
        p(id="wel_para" style="font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;font-size:19px;text-align: justify;line-height: 28px;background-color: whitesmoke;padding: 20px;") #{content}
